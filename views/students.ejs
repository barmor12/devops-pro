<!DOCTYPE html>
<html>
<head>
  <title>Student Records</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    .title {
      text-align: center;
      margin-bottom: 30px;
    }

    .student-list {
      list-style: none;
      padding: 0;
    }

    .student-item {
      background-color: #fff;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .student-name {
      font-weight: bold;
      font-size: 18px;
    }

    .student-exams {
      margin-top: 10px;
    }

    .exam-label {
      font-weight: bold;
      margin-right: 10px;
    }

    .exam-score {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title">Student Records</h1>
    <% if (students.length === 0) { %>
      <p>No students found.</p>
    <% } else { %>
      <ul class="student-list">
        <% students.forEach((student) => { %>
          <li class="student-item">
            <div class="student-name"><%= student.name %></div>
            <div class="student-exams">
              <span class="exam-label">Exam 1:</span>
              <span class="exam-score"><%= student.exam1 %></span>
              <span class="exam-label">Exam 2:</span>
              <span class="exam-score"><%= student.exam2 %></span>
              <span class="exam-label">Exam 3:</span>
              <span class="exam-score"><%= student.exam3 %></span>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</body>
</html>
